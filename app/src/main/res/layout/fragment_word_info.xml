<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_wordinfo_morning_alpha"
    tools:context=".fragment.study.wordInfo.WordInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--返回键-->
        <ImageButton
            android:id="@+id/image_wordInfoFragment_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_back"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!--设为熟词-->
        <ImageButton
            android:id="@+id/image_wordInfoFragment_setMemory4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#0000FF"/>

        <!--设为收藏-->
        <ImageButton
            android:id="@+id/image_wordInfoFragment_collect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00FF00"/>

        <!--工具栏-->
        <ImageButton
            android:id="@+id/image_wordInfoFragment_toolBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#FF0000"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>